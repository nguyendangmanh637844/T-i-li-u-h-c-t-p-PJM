@if (_showDialog)
{
    <div class="modal fade show d-block" id="exampleModal" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="titleLabel">Update Student</h5>
                    <button type="button" class="close" @onclick="@Close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body">
                    <EditForm Model="_student" OnValidSubmit="@UpdateStudent">
                        <div class="form-group">
                            <label for="exampleInputEmail1">FullName</label>
                            <input required @bind-value="_student.FullName" type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter your fullname">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">Birthday</label>
                            <input required type="date" @bind-value="_student.Birthday" class="form-control" id="exampleInputPassword1" placeholder="Password">
                        </div>
                        <button type="submit" class="btn btn-primary">Submit</button>
                        <a class="btn text-white btn-primary" @onclick="@Close">Close</a>
                    </EditForm>
                </div>
            </div>
        </div>
    </div>
}