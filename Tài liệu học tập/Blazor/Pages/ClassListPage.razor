@page "/"
@if (_listClass == null)
{
    <div class="spinner-border"></div>
}
else
{
    <div class="card">
        <div class="card-header">
            <div class="d-flex">
                <div class="p-2">Class</div>
                <a href="/create" class="btn btn-success ml-auto p-2">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus" viewBox="0 0 16 16">
                        <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z" />
                    </svg>Add
                </a>
            </div>
        </div>
        <div class="card-body">
            <div class="d-flex pb-4">
                <form @onsubmit="SearchIssues" class="form-inline my-2 my-lg-0 ml-auto">
                    <input class="form-control mr-0" type="search" @bind-value="@_searchName" placeholder="Search" />
                    <button class="btn btn-outline-success" type="submit">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
                            <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z" />
                        </svg>
                    </button>
                </form>
            </div>

            <table class="table table-striped table-bordered .table-responsive ">
                <thead class="bg-success">
                    <tr>
                        <th scope="col">Code</th>
                        <th scope="col">Name</th>
                        <th scope="col">Description</th>
                        <th class="col-2" scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var cl in _listClass)
                    {
                        <tr>
                            <td>@cl.ClassId</td>
                            <td>@cl.Name</td>
                            <td>@cl.Description</td>
                            <td class="d-flex justify-content-center">
                                <button class="btn btn-danger mr-3" @onclick="() => Delete(cl.ClassId)">
                                    Delete
                                </button>

                                <a class="btn btn-primary" href="/edit/@cl.ClassId">
                                    Edit
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}